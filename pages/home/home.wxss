.swiper {
    width: 100%;
    margin-bottom: 20rpx;
    height: 260rpx;
}

.slide-image {
    width: 100%;
    height: 260rpx;
}

.btnWarp {
    display: flex;
    justify-content: space-around;
    margin-top: 32rpx;
}

.maimai {
    box-sizing: border-box;
    display: block;
    width: 250rpx;
    height: 70rpx;
    display: flex;
    align-items: center;
    padding: 0 34rpx;
    justify-content: space-between;
    border-radius: 10rpx;
    background: linear-gradient(to left, #FA6748, #F98A72) !important;
}

.maiImg1 {
    width: 34rpx;
    height: 30.9rpx;
}

.maiImg2 {
    width: 34rpx;
    height: 37.5rpx;
}

.maimai text {
    font-size: 28rpx;
    color: #fff;
    margin: 0;
}

.searchWarp {
    display: flex;
    align-items: center;
    justify-content: space-around;
    margin-top: 50rpx;
}

.searchItem {
    width: 140rpx;
}

.searchItem image {
    width: 100rpx;
    height: 100rpx;
    display: block;
    margin: auto;
}

.searchItem text {
    font-size: 30rpx;
    display: block;
    color: #C7C7C7;
    text-align: center;
    margin-top: 14rpx;
}

.titleWarp {
    padding-left: 26rpx;
    display: flex;
    align-items: center;
    margin-top: 50rpx;
}

.line {
    width: 10rpx;
    height: 38rpx;
}

.backgroundChange-top {
    background: linear-gradient(to bottom, #FA6748, #F98A72) !important;
}

.titleWarp text {
    font-size: 30rpx;
    color: #666;
    margin-left: 24rpx;
    font-weight: bold;
}

.dataWrap {
    display: flex;
    justify-content: space-around;
    align-items: center;
    margin-top: 36rpx;
}

.dataItem {
    width: 200rpx;
    text-align: center;
}

.dataItem .dataTex {
    display: block;
    font-size: 24rpx;
    color: #999;
}

.dataItem .DataNum {
    width: 160rpx;
    display: block;
    font-size: 30rpx;
    color: #FF0000;
    text-align: center;
    font-weight: 600;
    text-overflow: ellipsis;
    white-space: nowrap;
    overflow: hidden;
    margin: 0 auto;
}

.midLine {
    width: 1px;
    height: 25px;
    background: #E2E2E2;
}

.shopItem {
    position: relative;
    overflow: hidden;
    padding: 11px 15px;
    padding-right: 13px;
    padding-left: 40px;
    box-sizing: border-box;
    transform-style: preserve-3d;
}

.shopItemImg {
    position: absolute;
    width: 40rpx;
    height: 40rpx;
    top: 32rpx;
    left: 28rpx;
    z-index: 1;
}

.itemDetails {
    display: table;
    table-layout: fixed;
    width: 83.33333333%;
    position: relative;
}


.itemDetails .mui-ellipsis {
    width: 120%;
    line-height: 40rpx;
    font-weight: 500;
    font-size: 30rpx;
    color: #303030;
}
.mui-ellipsis {
    overflow: hidden;
    white-space: nowrap;
    text-overflow: ellipsis;
}

.moneyShow {
    color: #F66E00;
    font-size: 24rpx;
    float: right;
    line-height: 80rpx;
}

.moneyShow text {
    font-size: 36rpx;
    color: #F66E00;
    font-weight: 600;
}
.mui-table label {
    line-height: 40rpx;
    color: #C7C7C7;
    font-weight: 500;
    font-size: 24rpx;
    min-width: 170rpx;
    display: inline-block;
}
.itemDetails .mui-h6 {
    font-size: 24rpx;
    font-weight: 400;
    color: #F66E00;
}

.shopItem:after {
    position: absolute;
    right: 0;
    bottom: 0;
    left: 30rpx;
    height: 2rpx;
    content: '';
    transform: scaleY(.5);
    background-color: #c8c7cc;
}