/* pages/searchDetail/searchDetail.wxss */
page{
    height: 1000px;
}
image {
    vertical-align: middle;
}

view {
    box-sizing: border-box;
}

.head {
    width: 100%;
    height: 88rpx;
    padding-left: 80rpx;
    background: linear-gradient(to right, #FA6748, #F98A72) !important;
    box-sizing: border-box;
    display: flex;

}

.zhixiang {
    width: 582rpx;
    height: 88rpx;
    text-align: center;
    line-height: 88rpx;
    color: #ffffff;
}


.search {
    width: 88rpx;
    height: 88rpx;
    padding: 20rpx;
}

.search image {
    width: 48rpx;
    height: 48rpx;
}

.selectShop {
    position: fixed;
    width: 100%;
    top: 44px;
    z-index: 5;
    padding: 20px 0;
    text-align: center;
    background: white;box-shadow: 0 0px 5px #888888;
    display: none;
}

.selectShopItems {
    padding: 12rpx 20rpx;
    color: #999;
    border: 2rpx solid #999;
    border-radius: 4rpx;
    font-size: 24rpx;
    height: 30rpx;
    line-height: 30rpx;margin:0 10rpx;
    display: inline-block;

}

.select1 {
    background-color: #F16542;
    color: white;
    /* border: 2rpx solid #F16542; */
}

.xuanzhuan {
    width: 48rpx;
    height: 48rpx;
    transition: all 0.5s;
}

.xuanzhuan1 {
    width: 48rpx;
    height: 48rpx;
    transform: rotate(180deg);
    transition: all 0.5s;
}

.showList1 {
    display: block;
}

.fenlei {
    border-top: 2rpx solid #eee;
    border-left: 2rpx solid #eee;
    background-color: #f2f2f2;
    box-sizing: border-box;height: 94rpx;
}
.fenleiItem {
    border-right: 2rpx solid #c8c7cc;
    border-bottom: 2rpx solid #c8c7cc;
    color: #797979;
    display: block;
    height: 94rpx;
    line-height: 94rpx;
    font-size: 26rpx;
    display: inline-block;
    width: 50%;
    text-align: center;
}
.fenlei image {
    width: 40rpx;height: 40rpx;
    vertical-align: middle;
}
.paixu {
    position: absolute;
    z-index: 111;
    width: 50%;
}
.paixu view {
    padding: 20rpx 0;
    margin: 4rpx;
    border-radius: 20rpx;
    border: 2rpx solid cadetblue;
    background-color: #FFF;
    text-align: center;
}
.dispalynone{
    display: none;
}
.shopItem {
    position: relative;
    overflow: hidden;
    padding: 11px 15px;
    padding-right: 13px;
    padding-left: 40px;
    box-sizing: border-box;
    transform-style: preserve-3d;
}

.shopItemImg {
    position: absolute;
    width: 40rpx;
    height: 40rpx;
    top: 32rpx;
    left: 28rpx;
    z-index: 1;
}

.itemDetails {
    display: table;
    table-layout: fixed;
    width: 83.33333333%;
    position: relative;
}


.itemDetails .mui-ellipsis {
    width: 120%;
    line-height: 40rpx;
    font-weight: 500;
    font-size: 30rpx;
    color: #303030;
}
.mui-ellipsis {
    overflow: hidden;
    white-space: nowrap;
    text-overflow: ellipsis;
}

.moneyShow {
    color: #F66E00;
    font-size: 24rpx;
    float: right;
    line-height: 80rpx;
}

.moneyShow text {
    font-size: 36rpx;
    color: #F66E00;
    font-weight: 600;
}
.mui-table label {
    line-height: 40rpx;
    color: #C7C7C7;
    font-weight: 500;
    font-size: 24rpx;
    min-width: 170rpx;
    display: inline-block;
}
.itemDetails .mui-h6 {
    font-size: 24rpx;
    font-weight: 400;
    color: #F66E00;
}

.shopItem:after {
    position: absolute;
    right: 0;
    bottom: 0;
    left: 30rpx;
    height: 2rpx;
    content: '';
    transform: scaleY(.5);
    background-color: #c8c7cc;
}